<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:background="@drawable/bg_glassmorphism"
    android:clipChildren="true"
    android:clipToPadding="true"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- ðŸŽ¨ Color Badge -->
        <View
            android:id="@+id/viewColorBadge"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:background="@color/green"
            android:layout_marginEnd="8dp" />

        <!-- Task Content -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="12dp">

            <!-- Title -->
            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/task_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Task Type -->
            <TextView
                android:id="@+id/textViewType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTitle"
                android:text="@string/reminder"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />

            <!-- Date & Time -->
            <TextView
                android:id="@+id/textViewDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewType"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:text="@string/_20_jun_2025_03_30_pm"
                android:textSize="14sp"
                android:textStyle="italic"
                android:textColor="@android:color/darker_gray" />

            <!-- Completion Checkbox -->
            <CheckBox
                android:id="@+id/checkBoxDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewType"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/mark_task_complete" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
